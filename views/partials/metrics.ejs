<div class="metrics-grid">
  <div class="metric-circle metric-download">
    <!-- SVG Icon and content for Download -->
    <div class="metric-label">Download</div>
    <div id="download" class="metric-value">0 Mbps</div>
    <div id="datadown" class="metric-subvalue">0 MB</div>
  </div>
  <div class="metric-circle metric-upload">
    <!-- SVG Icon and content for Upload -->
    <div class="metric-label">Upload</div>
    <div id="upload" class="metric-value">0 Mbps</div>
    <div id="datauploaded" class="metric-subvalue">0 MB</div>
  </div>
  <div class="metric-circle metric-ping">
    <!-- SVG Icon and content for Ping -->
    <div class="metric-label">Ping</div>
    <div id="ping" class="metric-value">0 ms</div>
  </div>
</div>
